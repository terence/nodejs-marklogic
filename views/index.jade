extends layout

block content
  h1= title
  p Welcome to MarkLogic Node.js API

  // Wrapper
  #wrapper


      // FOOD LIST
      h2 Food List
      #foodList
          table
              thead
                  th FoodName
                  th Price
                  th Delete?
              tbody
      //  /FOOD LIST

      // FOOD SEARCH
      #searchFood
          h2 Food Search
              fieldSet
                  input#inputFoodSearch(type='text', placeholder='onion, tacos, SF')
                  br
                  button#btnSearchFood Search Food
          strong Search Result:
          p
      //  /FOOD SEARCH
      
      #about
          h2 About
          a(href="/about") About
          br
          a(href="/foods/listapi") Food List API
          br
          a(href="/foods/new") Create New Food
          br
          a(href="/foods/read") View
          br
          a(href="http://example.com") External Site Ref
          br
  //  /WRAPPER




