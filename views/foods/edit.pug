
extends ../layout


block content
  h1.
    Food Edit #{uri}

  form#formAddFood(name="add-food" method="post" action="/foods/update?uri="+uri)
    div.input
      span.label Title
      input#inputTitle(type="text", name="title" value=title)
    div.input
      span.label FoodName
      input#inputFoodName(type="text", name="foodname" value=name)
    div.input
      span.label Price
      input(type="text", name="foodprice" value=price)
    div.input
      span.label Popularity
      input(type="text", name="foodpop" value=popularity)
    div.input
      span.label Description
      textarea(name="description", cols="40", rows="5")
    div.actions
      input#buttonSubmit(type="submit", value="Update")


  #about
    h2 Menu
    a(href="/") Front Page
    br
    a(href="/foods/list") Food List
    br
    a(href="/foods/listapi") Food List API
    br
    a(href="/foods/new") Create New Food
    br

